# WawApp Admin - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ============================================================
# FIREBASE CONFIGURATION
# ============================================================
# Get these values from:
# Firebase Console → Project Settings → Your apps → SDK setup & configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_APP_ID=1:1234567890:web:abcdef3234567890
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=1234567890

# ============================================================
# ADMIN AUTHENTICATION
# ============================================================
# Admin email domains (comma-separated)
ALLOWED_ADMIN_DOMAINS=wawapp.mr,admin.wawapp.mr

# Require email verification for admin accounts
REQUIRE_EMAIL_VERIFICATION=true

# Session timeout (minutes)
ADMIN_SESSION_TIMEOUT=480

# ============================================================
# ENVIRONMENT CONFIGURATION
# ============================================================
# Options: development, staging, production
ENVIRONMENT=development

# Enable debug mode (verbose logging)
DEBUG_MODE=true

# ============================================================
# FEATURE FLAGS
# ============================================================
# Enable Firebase Analytics
ENABLE_ANALYTICS=false

# Enable live operations map
ENABLE_LIVE_OPS=true

# Enable financial reports
ENABLE_FINANCIAL_REPORTS=true

# Enable driver performance reports
ENABLE_PERFORMANCE_REPORTS=true

# ============================================================
# APP CONFIGURATION
# ============================================================
# App version
APP_VERSION=1.0.0
BUILD_NUMBER=1

# API Base URL (for Cloud Functions)
# API_BASE_URL=https://us-central1-your-project.cloudfunctions.net

# Pagination settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================================
# MAP CONFIGURATION
# ============================================================
# Default map center (Nouakchott coordinates)
DEFAULT_MAP_CENTER_LAT=18.0735
DEFAULT_MAP_CENTER_LNG=-15.9582

# Default map zoom level
DEFAULT_MAP_ZOOM=12

# ============================================================
# OPTIONAL SETTINGS
# ============================================================
# Timeout for API calls (milliseconds)
API_TIMEOUT=30000

# Maximum retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3

# Log level: debug, info, warning, error
LOG_LEVEL=debug

# Enable maintenance mode
MAINTENANCE_MODE=false
